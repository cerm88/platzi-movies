{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["airbnb-base", "prettier"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "globals": {
        "axios": "writable"
    },
    "rules": {
        "import/extensions": [
            "error",
            "always",
            {
                "ignorePackages": true
            }
        ],
        "indent": ["error", 4],
        "max-len": [
            "warn",
            {
                "code": 100,
                "ignoreStrings": true,
                "ignoreTemplateLiterals": true,
                "ignoreRegExpLiterals": true,
                "ignoreUrls": true
            }
        ],
        "no-console": "warn",
        "no-debugger": "warn",
        "no-labels": [
            "error",
            {
                "allowLoop": true
            }
        ],
        "no-plusplus": [
            "error",
            {
                "allowForLoopAfterthoughts": true
            }
        ],
        "no-underscore-dangle": ["off"]
    }
}
